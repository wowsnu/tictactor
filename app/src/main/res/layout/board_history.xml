<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/moveNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginEnd="16dp"/>

    <GridLayout
        android:id="@+id/miniBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3">

        <!-- 9개의 TextView를 그리드로 배치 -->
        <TextView
            android:id="@+id/cell00"
            style="@style/MiniBoardCell" />
        <TextView
            android:id="@+id/cell01"
            style="@style/MiniBoardCell" />
        <TextView
            android:id="@+id/cell02"
            style="@style/MiniBoardCell" />
        <TextView
            android:id="@+id/cell10"
            style="@style/MiniBoardCell" />
        <TextView
            android:id="@+id/cell11"
            style="@style/MiniBoardCell" />
        <TextView
            android:id="@+id/cell12"
            style="@style/MiniBoardCell" />
        <TextView
            android:id="@+id/cell20"
            style="@style/MiniBoardCell" />
        <TextView
            android:id="@+id/cell21"
            style="@style/MiniBoardCell" />
        <TextView
            android:id="@+id/cell22"
            style="@style/MiniBoardCell" />
    </GridLayout>

    <Button
        android:id="@+id/gotoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="되돌아가기"/>

</LinearLayout>